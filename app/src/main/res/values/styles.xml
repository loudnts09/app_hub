<resources>
    <style name="TitleLabel">
        <item name="android:textColor">@color/clr_text_title</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScoreText">
        <item name="android:textColor">@color/clr_score</item>
        <item name="android:textSize">56sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/score_bg</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/clr_btn_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="SecondaryButton" parent="PrimaryButton">
        <item name="android:background">@drawable/btn_secondary</item>
    </style>
    <!-- Canto arredondado padrão -->
    <style name="Shape.Radius">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Alias opcional para evitar o erro se algum lugar referir @style/Shape -->
    <style name="Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Texto grande do display -->
    <style name="Text.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Text.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilos de botões -->
    <style name="CalcButton.Base" parent="Widget.Material3.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="CalcButton.Digit" parent="CalcButton.Base">
        <item name="backgroundTint">@color/digit_bg</item>
        <item name="android:textColor">@color/digit_fg</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="CalcButton.Operator" parent="CalcButton.Base">
        <item name="backgroundTint">@color/op_bg</item>
        <item name="android:textColor">@color/op_fg</item>
    </style>

    <style name="CalcButton.Equals" parent="CalcButton.Base">
        <item name="backgroundTint">@color/accent_bg</item>
        <item name="android:textColor">@color/accent_fg</item>
        <item name="elevation">4dp</item>
    </style>
</resources>