<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Card do display -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDisplay"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/display_bg"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtHistorico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/display_subtext"
                android:textSize="14sp"
                android:gravity="end"
                android:maxLines="2"/>

            <TextView
                android:id="@+id/txtResultado"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end|bottom"
                android:text="0"
                android:textColor="@color/display_text"
                android:fontFamily="monospace"
                android:textSize="48sp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="28sp"
                android:autoSizeMaxTextSize="56sp"
                android:autoSizeStepGranularity="2sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Grade de botões -->
    <!-- ... cabeçalho com card do display permanece como está ... -->

    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:rowCount="6"
        android:columnCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/cardDisplay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- L1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLog" style="@style/CalcButton.Operator"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="lg"
            android:contentDescription="logaritmo de base 10"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPi" style="@style/CalcButton.Operator"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="π"
            android:contentDescription="constante pi"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPorcentagem" style="@style/CalcButton.Operator"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="%"
            android:contentDescription="porcentagem do acumulado"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRaiz" style="@style/CalcButton.Operator"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="√"
            android:contentDescription="raiz quadrada"/>

        <!-- L2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear" style="@style/CalcButton.Operator"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="C"
            android:contentDescription="limpar"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackspace" style="@style/CalcButton.Operator"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="⌫"
            android:contentDescription="apagar último dígito"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDividir" style="@style/CalcButton.Operator"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="÷"
            android:contentDescription="dividir"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMultiplicar" style="@style/CalcButton.Operator"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="×"
            android:contentDescription="multiplicar"/>

        <!-- L3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7" style="@style/CalcButton.Digit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="7"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8" style="@style/CalcButton.Digit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="8"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9" style="@style/CalcButton.Digit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="9"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubtrair" style="@style/CalcButton.Operator"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="-"
            android:contentDescription="subtrair"/>

        <!-- L4 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4" style="@style/CalcButton.Digit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="4"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5" style="@style/CalcButton.Digit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="5"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6" style="@style/CalcButton.Digit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="6"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSomar" style="@style/CalcButton.Operator"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="+"
            android:contentDescription="somar"/>

        <!-- L5 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1" style="@style/CalcButton.Digit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="1"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2" style="@style/CalcButton.Digit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="2"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3" style="@style/CalcButton.Digit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="3"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIgual" style="@style/CalcButton.Equals"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="="
            android:contentDescription="igual"/>

        <!-- L6 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn0" style="@style/CalcButton.Digit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="2" android:text="0"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPonto" style="@style/CalcButton.Digit"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="."/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSign" style="@style/CalcButton.Operator"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:text="+/−"
            android:contentDescription="trocar sinal"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>